root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[Makefile]
indent_style = tab